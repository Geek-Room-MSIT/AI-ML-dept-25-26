import random

map = ["_", "_", "_", "_", "_"]
treasure = random.randint(0, 4)
found = False

print("Welcome to Treasure Hunt!")
print("Find the hidden treasure! 🏴‍☠️")
print("Map:", " ".join(map))
print()

while not found:
    guess = int(input("Guess the position (1-5): ")) - 1
    
    if guess < 0 or guess > 4:
        print("Please enter a number between 1 and 5")
        continue
    
    if guess == treasure:
        found = True
        map[guess] = "🟧"
        print(" ".join(map))
        print("🎉 You found the treasure! 🟧")
    else:
        map[guess] = "❌"
        
        if guess < treasure:
            print("Too left! Try moving right.")
        else:
            print("Too right! Try moving left.")
        
        print("Current map:", " ".join(map))
        print()
